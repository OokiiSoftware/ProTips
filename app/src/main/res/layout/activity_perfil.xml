<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="false"
    android:background="@color/colorPrimaryLight_2"
    tools:context=".activity.PerfilActivity">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginStart="3dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_dark"
            android:textSize="15sp"
            android:text="@string/voltar"/>

        <Button
            android:id="@+id/salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_dark"
            android:textSize="15sp"
            android:text="@string/salvar"
            tools:ignore="RelativeOverlap" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="150sp"
        android:layout_below="@+id/rl_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-75dp"
        app:cardCornerRadius="74dp">

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circulo_colorPrimaryLight"
            android:contentDescription="@string/perfil_usuario_nome"
            android:padding="2dp"
            android:src="@drawable/ic_person_dark" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_below="@+id/cardView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/dados_pessoais"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/login_item_margin"
                android:background="@drawable/bg_circulo_branco"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/perfil_usuario_nome"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_circulo_branco"
                    android:hint="@string/perfil_usuario_et_nome"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:importantForAutofill="no"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/login_item_margin"
                android:background="@drawable/bg_circulo_branco"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/perfil_usuario_tipname"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/tipname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_circulo_branco"
                    android:hint="@string/perfil_usuario_et_tipname"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:importantForAutofill="no" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/login_item_margin"
                android:background="@drawable/bg_circulo_branco"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/telefone"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/telefone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_circulo_branco"
                    android:hint="@string/_99_99999_9999"
                    android:inputType="phone"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:importantForAutofill="no" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/login_item_margin"
                android:background="@drawable/bg_circulo_branco"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/perfil_usuario_email"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_circulo_branco"
                    android:hint="@string/perfil_usuario_et_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:importantForAutofill="no" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/login_item_margin"
                android:background="@drawable/bg_circulo_branco"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/nascimento"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/tv_data"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_circulo_branco"
                    android:hint="@string/_01_01_2000"
                    android:inputType="date"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:importantForAutofill="no" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/login_item_margin"
                android:background="@drawable/bg_circulo_branco"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/estado"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/estado"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:entries="@array/estado"
                    android:popupBackground="@color/colorPrimaryDark"
                    android:background="@drawable/bg_circulo_branco"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/login_item_margin"
                android:background="@drawable/bg_circulo_branco"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/privacidade"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/privacidade"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:entries="@array/privacidade"
                    android:popupBackground="@color/colorPrimaryDark"
                    android:background="@drawable/bg_circulo_branco"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

                <TextView
                    android:id="@+id/privacidade_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="@dimen/text_size"
                    android:text="@string/_exclamação"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_item_margin"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/dados_outros"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/login_item_margin"
                android:background="@drawable/bg_circulo_branco"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginBottom="@dimen/login_item_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/perfil_usuario_categoria"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/categoria"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:entries="@array/categoria"
                    android:popupBackground="@color/colorPrimaryDark"
                    android:background="@drawable/bg_circulo_branco"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

            </LinearLayout>

            <Button
                android:id="@+id/quero_ser_tipster"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/quero_ser_um_tipster"
                android:textSize="20sp"
                android:layout_marginBottom="@dimen/login_item_margin"
                android:background="@drawable/bg_circulo_branco"/>

            <LinearLayout
                android:id="@+id/tipster_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/esportes_"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/tv_esporte"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:entries="@array/esporte"
                        android:popupBackground="@color/colorPrimaryDark"
                        android:background="@color/text_dark"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

                    <TextView
                        android:id="@+id/esportes_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/text_dark"
                        android:padding="7dp"
                        android:text="@string/_mais"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/esportes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@color/text_dark"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/login_item_margin"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/mercados_"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/tv_mercado"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:entries="@array/mercado"
                        android:popupBackground="@color/colorPrimaryDark"
                        android:background="@color/text_dark"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

                    <TextView
                        android:id="@+id/mercados_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/text_dark"
                        android:padding="7dp"
                        android:text="@string/_mais"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mercados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/login_item_margin"
                    android:padding="5dp"
                    android:background="@color/text_dark"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </LinearLayout>

        </TableLayout>

    </ScrollView>

</RelativeLayout>